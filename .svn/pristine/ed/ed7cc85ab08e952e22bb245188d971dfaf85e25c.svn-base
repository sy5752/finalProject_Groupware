									1,#{bor_no},#{post_no},#{user_id})
	</insert>
	
	<select id="selectReply" resultType="postCommVo" parameterType="postCommVo">
		select * from post_com where bor_no=#{bor_no} and post_no=#{post_no} and user_id=#{user_id}
